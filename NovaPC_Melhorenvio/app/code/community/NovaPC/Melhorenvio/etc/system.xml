                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Inscrição Estadual da empresa.</comment>
                        </inscricao_estadual>
                        <email translate="label" module="melhorenvio">
                            <label>E-mail válido</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email>
                        <telefone translate="label" module="melhorenvio">
                            <label>Telefone para contato</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Telefone/celular para contato com o remetente</comment>
                        </telefone>
                    </fields>
                </empresa>
                <address translate="label" module="melhorenvio">
                    <label>Endereço da Empresa</label>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cep translate="label" module="melhorenvio">
