                <empresa translate="label" module="melhorenvio">
                    <label>Configurações da Empresa</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <button_load translate="label">
                            <label>Carregar informações do usuário no Melhor Envio</label>
