                            <frontend_model>melhorenvio/adminhtml_system_config_source_tokenbutton</frontend_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Clique para completar os dados com os dados cadastrados na Melhor Envio</comment>
                        </button_load>
                        <cpf translate="label" module="melhorenvio">
                            <label>CPF</label>
